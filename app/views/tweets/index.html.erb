<p id="notice"><%= notice %></p>
<h3>User:<%=current_user.name %></h3>
<h1>Listing Tweets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Tweet</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.name %></td>
        <td><%= tweet.tweet %></td>
        <td><%= link_to 'Show', tweet %></td>
	<% if current_user.name == tweet.name %>
        <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
        <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tweet', new_tweet_path %>
<%= line_chart @chart_data %>
<%= pie_chart @column_data %>
<%= geo_chart [['Popularity'], ['東京', 10]], library: {region: 'JP', displayMode: 'regions', resolution: 'provinces'} %>
